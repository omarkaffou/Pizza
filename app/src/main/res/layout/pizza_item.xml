<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#121111"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="103dp"
        android:layout_height="93dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:drawingCacheQuality="auto"
        app:srcCompat="@mipmap/clock" />

    <TextView
        android:id="@+id/nom"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/photo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="-1dp"
        android:foregroundTint="#020202"
        android:text="TextView"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nbreIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nom"
        android:layout_alignBottom="@+id/photo"
        android:layout_marginStart="43dp"
        android:layout_marginBottom="35dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nbreIngredients"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="-53dp"
        app:srcCompat="@mipmap/toright"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/idf"
        android:layout_width="74dp"
        android:layout_height="33dp"
        android:layout_above="@+id/nbreIngredients"
        android:layout_alignStart="@+id/nom"
        android:layout_alignParentTop="true"
        android:layout_marginStart="156dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="-25dp"
        android:layout_toStartOf="@+id/imageView2"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/duree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/photo"
        android:layout_alignParentTop="true"
        android:layout_marginStart="172dp"
        android:layout_marginTop="84dp"
        android:foregroundTint="#000000"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="27dp"
        android:layout_height="19dp"
        android:layout_alignEnd="@+id/nbreIngredients"
        android:layout_alignParentTop="true"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="44dp"
        app:srcCompat="@mipmap/clock"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="19dp"
        android:layout_alignEnd="@+id/nbreIngredients"
        android:layout_alignBottom="@+id/photo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="34dp"
        app:srcCompat="@mipmap/ingredients"
        tools:srcCompat="@tools:sample/avatars" />

</RelativeLayout>